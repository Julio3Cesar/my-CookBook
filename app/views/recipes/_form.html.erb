
<section class ="row">
  <div class="form-group">
    <%= form_for @recipe do |f| %>
      <section class="row">
        <div class="col-md-6">
          <% if @recipe.errors.any? %>
            <h2> Erro: </h2>
            <ul>
            <% @recipe.errors.messages.each do |msg| %>
              <li><%= msg.last.last %></li>
            <% end %>
            </ul>
          <% end %>
        </div>
      </section>

      <section class="row ">
        <div class="col col-md-5">
          <%= f.label :photo, 'Adicionar foto' %>
          <%= f.file_field :photo %>
          <%= f.label :title, 'TÃ­tulo' %>
          <%= f.text_field :title, class:'form-control' %>
          <%= f.label :cuisine_id, 'Cozinha' %>
          <%= f.select(:cuisine_id) do %>
            <% Cuisine.all.each do |c| -%>
              <%= content_tag(:option, c.name, value: c.id) %>
            <% end %>
          <% end %>
          <%= f.label :recipe_type_id, 'Tipo da Receita' %>
          <%= f.select(:recipe_type_id) do %>
            <% RecipeType.all.each do |c| -%>
              <%= content_tag(:option, c.name, value: c.id) %>
            <% end %>
          <% end %>
          <%= f.label :difficulty, 'Dificuldade' %>
          <%= f.text_field :difficulty, class:'form-control' %>
          <%= f.label :cook_time, 'Tempo de Preparo' %>
          <%= f.text_field :cook_time, class:'form-control' %>
          <%= f.label :ingredients, 'Ingredientes' %>
          <%= f.text_field :ingredients, class:'form-control' %>
          <%= f.label :method, 'Como Preparar' %>
          <%= f.text_field :method, class:'form-control' %>
          <br>
          <%= f.submit 'Enviar', class:'btn btn-primary' %>
        <% end %>
    </div>
    </section>
  </div>
</section>
<%= render 'shared/aside' %>

<nav class="row">
  <section class="col-md-6">
    <header class="page-header">
      <h1>CookBook</h1>
      <p>Bem-vindo ao maior livro de receitas online</p>
    </header>
    <article class="row">
        <% @recipes.each do |recipe|%>
          <section class="col-md-6">
            <h1><%= link_to recipe.title, recipe %></h1>
            <ul>
              <li>
                <%= recipe.recipe_type %>
              </li>
              <li>
                <%= recipe.cuisine %>
              </li>
              <li>
                <%= recipe.difficulty %>
              </li>
              <li>
                <%= "#{recipe.cook_time} minutos" %>
              </li>
            </ul>
          </section>
          <%end%>
      </article>
  </section>
</nav>

<header>
  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
          <span class="sr-only">Toggle</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to  'CookBook', root_path,  class:"navbar-brand"  %>
      </div>
  
      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to  'Minhas Receitas', my_recipes_path %></li>
          <li><%= link_to  'Minhas Receitas Favoritas', favorites_recipes_path %></li>
          <li><%= link_to  'Enviar uma receita', new_recipe_path %></li>
          <li class="dropdown visible-xs">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Cozinha <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <% @cuisines.each do |cuisine|%>
                    <li><%= link_to cuisine.name.downcase, cuisine %></li>
                <%end%>
              </ul>
            </li>
            <li class="dropdown visible-xs">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tipos de receita<span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <% @recipe_types.each do |recipe_type|%>
                        <li> <%= link_to recipe_type.name.downcase, recipe_type %> </li>
                    </ul>
                  <%end%>
                </ul>
              </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li><%= link_to  'Logout', destroy_user_session_path, method: "delete" %></li>
          <% else %>
            <li><%= link_to  'Login', new_user_session_path %></li>
          <% end %>
        </ul>
        <%= form_tag(search_recipes_path, method: "get", class:'navbar-form navbar-right') do %>
          <%= label_tag(:term, "Busca", class:'label label-default') %>
          <%= text_field_tag(:term, "", class:"form-control") %>
          <%= submit_tag("Buscar", class:'btn btn-default')%>
        <% end %>
      </div>
    </div>
  </nav>
</header>
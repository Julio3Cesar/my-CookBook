<h1>Nova Receita</h1>

<%= form_for @recipe,url: recipe_index_path(@recipe), html: { method: :post } do |f| %>
  <% if @recipe.errors.any? %>
    <h2> Erro: </h2>
    <ul>
    <% @recipe.errors.messages.each do |msg| %>
      <li><%= msg.last.last %></li>
    <% end %>
    </ul>
  <% end %>

  <%= f.label :title, 'TÃ­tulo' %>
  <%= f.text_field :title %>
  <%= f.label :recipe_type, 'Tipo da Receita' %>
  <%= f.text_field :recipe_type %>
  <%= f.label :cuisine_id, 'Cozinha' %>
  <%= f.select(:cuisine_id) do %>
    <% Cuisine.all.each do |c| -%>
      <%= content_tag(:option, c.name, value: c.id) %>
    <% end %>
  <% end %>
  <%= f.label :difficulty, 'Dificuldade' %>
  <%= f.text_field :difficulty %>
  <%= f.label :cook_time, 'Tempo de Preparo' %>
  <%= f.text_field :cook_time %>
  <%= f.label :ingredients, 'Ingredientes' %>
  <%= f.text_field :ingredients %>
  <%= f.label :method, 'Como Preparar' %>
  <%= f.text_field :method %>
  <%= f.submit 'Enviar' %>
<% end %>

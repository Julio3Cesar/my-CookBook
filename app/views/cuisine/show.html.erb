<h1>
  <%= @cuisine.name %>
</h1>
<div class="notice"><%= flash[:notice] %></div>
<% @recipes.each do |recipe|%>
  <h1>
    <%= link_to recipe.title, recipe %>
  </h1>
  <ul>
    <li>
      <%= recipe.recipe_type %>
    </li>
    <li>
      <%= recipe.cuisine.name %>
    </li>
    <li>
      <%= recipe.difficulty %>
    </li>
    <li>
      <%= "#{recipe.cook_time} minutos" %>
    </li>
  </ul>
<%end%>